{
    "manifest_version": 3,
    "name": "Readit",
    "description": "Content summarizer for social media sites",
    "version": "1.0",
    "permissions": ["activeTab", "webRequest"],
    "host_permissions": ["https://evolving-porpoise-heartily.ngrok-free.app/*"],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/fedora-16.png",
            "32": "images/fedora-32.png",
            "48": "images/fedora-48.png",
            "128": "images/fedora-128.png"
        }
    },
    "icons": {
        "16": "images/fedora-16.png",
        "32": "images/fedora-32.png",
        "48": "images/fedora-48.png",
        "128": "images/fedora-128.png"
    }
}